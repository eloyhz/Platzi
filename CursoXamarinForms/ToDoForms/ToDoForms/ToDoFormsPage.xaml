<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:ToDoForms" x:Class="ToDoForms.ToDoFormsPage">
	<StackLayout VerticalOptions="Center"
        Margin="20">
        <Entry x:Name="usuarioEntry"
            Placeholder="Nombre de usuario"/>
        <Entry x:Name="passwordEntry"
            Placeholder="Contraseña"
            IsPassword="true"/>
        <Button Text="Inicia sesión"
            Clicked="Handle_Clicked"/>
        <Label x:Name="resultadoLabel"
            HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>
